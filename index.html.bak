<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>Calculator</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <div class="container">
        <div class="displayBox">
            <div class="display">0</div>
        </div>
        <table>
            <tr>
                <th>
                    <div class="button tool">(</div>
                </th>
                <th>
                    <div class="button tool">)</div>
                </th>
                <th>
                    <div class="button tool">%</div>
                </th>
                <th>
                    <div class="button tool" id="clear">AC</div>
                </th>
            </tr>
            <tr>
                <th>
                    <div class="button number">7</div>
                </th>
                <th>
                    <div class="button number">8</div>
                </th>
                <th>
                    <div class="button number">9</div>
                </th>
                <th>
                    <div class="button tool operator" id="divide">รท</div>
                </th>
            </tr>
            <tr>
                <th>
                    <div class="button number">4</div>
                </th>
                <th>
                    <div class="button number">5</div>
                </th>
                <th>
                    <div class="button number">6</div>
                </th>
                <th>
                    <div class="button tool operator" id="multiply">x</div>
                </th>
            </tr>
            <tr>
                <th>
                    <div class="button number">1</div>
                </th>
                <th>
                    <div class="button number">2</div>
                </th>
                <th>
                    <div class="button number">3</div>
                </th>
                <th>
                    <div class="button tool operator" id="subtract">-</div>
                </th>
            </tr>
            <tr>
                <th>
                    <div class="button number">0</div>
                </th>
                <th>
                    <div class="button tool" id="dot">.</div>
                </th>
                <th>
                    <div class="button" id="equal">=</div>
                </th>
                <th>
                    <div class="button tool operator" id="add">+</div>
                </th>
            </tr>
        </table>
    </div>






    <script src="script.js"></script>
  </body>
</html>